{
  // "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "public",
    "sourceMap": true,
    "lib": [
      "ESNEXT",
      "DOM"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}